{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Quarterly CPI Change by City",
    "anchor": "middle",
    "fontSize": 18,
    "fontWeight": "bold"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/TranVuongHoan/Assignment-2/refs/heads/main/tidy_cpi_by_city.csv"
  },
  "params": [
    {
      "name": "group_select",
      "value": "All groups",
      "bind": {
        "input": "select",
        "options": [
          "All groups",
          "Food & non-alcoholic beverages",
          "Alcohol & tobacco",
          "Clothing & footwear",
          "Housing",
          "Furnishings, household equipment and services",
          "Health",
          "Transport",
          "Communication",
          "Recreation & culture",
          "Education",
          "Insurance & financial services"
        ],
        "name": "Select Group: "
      }
    }
  ],
  "transform": [
    { "filter": "datum.Group == group_select" }
  ],
  "width": "container",
  "height": 400,
  "layer": [
    {
      "mark": {
        "type": "bar",
        "cornerRadiusTopLeft": 4,
        "cornerRadiusTopRight": 4
      },
      "encoding": {
        "x": {
          "field": "City",
          "type": "nominal",
          "sort": "-y",
          "axis": {
            "labelAngle": -40,
            "title": null
          }
        },
        "y": {
          "aggregate": "sum",
          "field": "Quarterly_Percentage_Change",
          "type": "quantitative",
          "axis": {
            "title": null,
            "labelFontSize": 11,
            "labelColor": "#333"
          }
        },
        "color": {
          "field": "City",
          "type": "nominal",
          "legend": null,
          "scale": {
            "range": [
              "#E69F00",
              "#56B4E9",
              "#009E73",
              "#F0E442",
              "#0072B2",
              "#D55E00",
              "#CC79A7",
              "#999999",
              "#117733"
            ]
          }
        },
        "tooltip": [
          { "field": "City", "title": "City" },
          { "field": "Group", "title": "Group" },
          {
            "field": "Quarterly_Percentage_Change",
            "type": "quantitative",
            "format": ".1f",
            "title": "Quarterly % Change"
          }
        ]
      }
    },
    {
      "mark": { "type": "rule", "color": "#000", "strokeDash": [4, 2] },
      "encoding": { "y": { "datum": 0 } }
    }
  ],
  "config": {
    "axisY": { "orient": "left", "title": null },
    "axisRight": { "labels": false, "ticks": false, "domain": false },
    "view": { "stroke": "transparent" }
  }
}
