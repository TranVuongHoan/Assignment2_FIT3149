{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Tropical Cyclones (last 3 years)",
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/TranVuongHoan/Assignment2_FIT3149/refs/heads/main/data/ibtracs_last3years_clean.csv"
  },
  "params": [
    {
      "name": "stormSelection",
      "value": null,
      "bind": {
        "input": "select",
        "options": [
          null,
          "TIFFANY",
          "YASA",
          "BATSIRAI",
          "SEROJA",
          "JASPER"
        ],
        "name": "Select Storm: "
      }
    }
  ],
  "transform": [
    {"filter": "stormSelection == null || datum.name == stormSelection"}
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "mark": {"type": "circle", "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "color": {
          "field": "pressure",
          "type": "quantitative",
          "title": "Pressure (mb)",
          "scale": {"scheme": "blues"}
        },
        "tooltip": [
          {"field": "time", "type": "temporal", "title": "Time"},
          {"field": "name", "type": "nominal", "title": "Storm"},
          {"field": "basin", "type": "nominal", "title": "Basin"},
          {"field": "pressure", "type": "quantitative", "title": "Pressure (mb)"},
          {"field": "status", "type": "nominal", "title": "Status"}
        ]
      }
    }
  ],
  "config": {
    "view": {"stroke": "transparent"},
    "legend": {"titleFontSize": 12, "labelFontSize": 10}
  }
}
