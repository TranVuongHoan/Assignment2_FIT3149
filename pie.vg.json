{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Radial CPI by Group (Select City)",
  "data": {
    "url": "https://raw.githubusercontent.com/TranVuongHoan/Assignment-2/refs/heads/main/tidy_cpi_by_city.csv"
  },
  "params": [
    {
      "name": "city_select",
      "value": "Sydney",
      "bind": {
        "input": "select",
        "options": [
          "Sydney",
          "Melbourne",
          "Brisbane",
          "Adelaide",
          "Perth",
          "Hobart",
          "Darwin",
          "Canberra",
          "Weighted average of eight capital cities"
        ],
        "name": "Select City: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.City == city_select"
    },
    {
      "filter": "datum.Group != 'Source: Australian Bureau of Statistics, Consumer Price Index, Australia June Quarter 2025'"
    }
  ],
  "mark": { "type": "arc", "innerRadius": 50 },
  "encoding": {
    "theta": { "field": "Quarterly_Percentage_Change", "type": "quantitative" },
    "color": { "field": "Group", "type": "nominal" },
    "tooltip": [
      { "field": "Group", "type": "nominal" },
      { "field": "Quarterly_Percentage_Change", "type": "quantitative" }
    ]
  }
}
